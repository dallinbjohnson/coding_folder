<h1>Blogs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= link_to blog.title, blog %></td>
        <td><%= blog.body %></td>
        <td><%= blog.image %></td>
        <td>
          <div class="fixed-action-btn horizontal" style="position: sticky; display: inline-block;">
            <a class="btn-floating btn-large red">
              <i class="material-icons">keyboard_arrow_left</i>
            </a>
            <ul>
              <li><%= link_to '<i class="material-icons">edit</i>'.html_safe, edit_blog_path(blog), class: "btn-floating green" %></li>
              <li><%= link_to '<i class="material-icons">delete</i>'.html_safe, blog, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-floating blue" %></li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog', new_blog_path, class: "btn-large waves-effect waves-light blue" %>

